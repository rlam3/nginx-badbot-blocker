# Place this at the bottom of your jail.local file adjust ban and find times as your require
[nginxrepeatoffender]
enabled = true
logpath = %(nginx_access_log)s
port = http,https
filter = nginxrepeatoffender
banaction = nginxrepeatoffender
bantime  = 86400   ; 1 day
findtime = 604800   ; 1 week
maxretry = 20
